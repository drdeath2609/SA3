<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_teal_50">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerCardView"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/drawerProfilePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profilephoto"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/drawerListView"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent" android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" android:dividerHeight="0dp"
        android:background="@color/md_teal_50" tools:context="nirmauni.ac.in.sa3.NavigationDrawerFragment" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerLogout"
        android:layout_weight="5"
        android:background="@color/md_teal_50"
        android:text="@string/signout" />

</LinearLayout>