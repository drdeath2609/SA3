<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nirmauni.ac.in.sa3.WelcomeIntroTimetable" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/introBack"
            android:layout_height="match_parent"
            android:maxHeight="150dp"
            android:layout_width="wrap_content"
            android:maxWidth="150dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/introplain"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/timetableIntroImage"
            android:layout_height="match_parent"
            android:maxHeight="150dp"
            android:layout_width="wrap_content"
            android:maxWidth="150dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/introtimetable"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find timetable"
            android:id="@+id/timetableIntroText"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/offGrey"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
